<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activities.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_margin="@dimen/_5mdp"
                android:orientation="horizontal">
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="@dimen/_130mdp"
                    android:layout_height="@dimen/_150mdp"
                    android:layout_margin="@dimen/_10mdp"
                    android:elevation="@dimen/_5mdp"
                    android:id="@+id/add_notice">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center">
                        <ImageView
                            android:layout_width="@dimen/_64mdp"
                            android:layout_height="@dimen/_64mdp"
                            android:background="@drawable/circle_green"
                            android:src="@drawable/ic_notice"
                            android:padding="15dp"/>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_1mdp"
                            android:layout_marginTop="@dimen/_10mdp"
                            android:background="@color/lightGray"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Upload Notice"
                            android:padding="5dp"
                            android:layout_marginTop="@dimen/_10mdp"
                            android:textColor="@color/textColor"
                            android:textStyle="bold"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="@dimen/_130mdp"
                    android:layout_height="@dimen/_150mdp"
                    android:layout_margin="10dp"
                    android:elevation="@dimen/_5mdp"
                    android:id="@+id/add_gallery_image">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center">
                        <ImageView
                            android:layout_width="@dimen/_64mdp"
                            android:layout_height="@dimen/_64mdp"
                            android:background="@drawable/circle_purple"
                            android:src="@drawable/ic_gallery"
                            android:padding="@dimen/_15mdp"/>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_1mdp"
                            android:layout_marginTop="@dimen/_10mdp"
                            android:background="@color/lightGray"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Upload Image"
                            android:padding="@dimen/_5mdp"
                            android:layout_marginTop="@dimen/_10mdp"
                            android:textColor="@color/textColor"
                            android:textStyle="bold"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_margin="@dimen/_5mdp"
                android:orientation="horizontal">
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="@dimen/_130mdp"
                    android:layout_height="@dimen/_150mdp"
                    android:layout_margin="@dimen/_10mdp"
                    android:elevation="@dimen/_5mdp"
                    android:id="@+id/add_ebook">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center">
                        <ImageView
                            android:layout_width="@dimen/_64mdp"
                            android:layout_height="@dimen/_64mdp"
                            android:background="@drawable/circle_pink"
                            android:src="@drawable/ic_upload"
                            android:padding="15dp"/>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_1mdp"
                            android:layout_marginTop="@dimen/_10mdp"
                            android:background="@color/lightGray"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Upload Ebook"
                            android:padding="@dimen/_5mdp"
                            android:layout_marginTop="@dimen/_10mdp"
                            android:textColor="@color/textColor"
                            android:textStyle="bold"/>
                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="@dimen/_130mdp"
                    android:layout_height="@dimen/_150mdp"
                    android:layout_margin="@dimen/_10mdp"
                    android:elevation="@dimen/_5mdp"
                    android:id="@+id/faculty">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="@dimen/_64mdp"
                            android:layout_height="@dimen/_64mdp"
                            android:background="@drawable/circle_yellow"
                            android:src="@drawable/ic_upload"
                            android:padding="@dimen/_15mdp"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_1mdp"
                            android:layout_marginTop="@dimen/_10mdp"
                            android:background="@color/lightGray"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Faculty"
                            android:padding="@dimen/_5mdp"
                            android:layout_marginTop="@dimen/_10mdp"
                            android:textColor="@color/textColor"
                            android:textStyle="bold"/>
                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_margin="@dimen/_5mdp"
                android:orientation="horizontal">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="@dimen/_130mdp"
                    android:layout_height="@dimen/_150mdp"
                    android:layout_margin="@dimen/_10mdp"
                    android:elevation="@dimen/_5mdp"
                    android:id="@+id/delete_notice">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="@dimen/_64mdp"
                            android:layout_height="@dimen/_64mdp"
                            android:background="@drawable/circle_red"
                            android:src="@drawable/ic_delete"
                            android:padding="@dimen/_15mdp"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_1mdp"
                            android:layout_marginTop="@dimen/_10mdp"
                            android:background="@color/lightGray"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Delete Notice"
                            android:padding="@dimen/_5mdp"
                            android:layout_marginTop="@dimen/_10mdp"
                            android:textColor="@color/textColor"
                            android:textStyle="bold"/>
                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="@dimen/_130mdp"
                    android:layout_height="@dimen/_150mdp"
                    android:layout_margin="@dimen/_10mdp"
                    android:elevation="@dimen/_5mdp"
                    android:id="@+id/logout_btn">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="@dimen/_64mdp"
                            android:layout_height="@dimen/_64mdp"
                            android:background="@drawable/circle_green"
                            android:src="@drawable/ic_logout"
                            android:padding="@dimen/_15mdp"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_1mdp"
                            android:layout_marginTop="@dimen/_10mdp"
                            android:background="@color/lightGray"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Log Out"
                            android:padding="@dimen/_5mdp"
                            android:layout_marginTop="@dimen/_10mdp"
                            android:textColor="@color/textColor"
                            android:textStyle="bold"/>
                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>