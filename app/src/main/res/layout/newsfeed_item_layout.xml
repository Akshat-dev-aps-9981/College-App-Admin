<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@drawable/teacher_bg"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/_4mdp"
        android:layout_marginStart="@dimen/_4mdp"
        android:padding="@dimen/_2mdp"
        android:layout_marginEnd="@dimen/_4mdp"
        android:background="@drawable/teacher_bg"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="@dimen/_10mdp"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="@dimen/_30mdp"
                android:layout_height="@dimen/_30mdp"
                android:src="@drawable/user"/>

            <TextView
                android:id="@+id/author_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Collage App Admin"
                android:layout_marginStart="@dimen/_10mdp"
                android:textSize="@dimen/_16font_mdp"
                android:textColor="@color/textColor"
                android:drawablePadding="@dimen/_8mdp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/delete_notice_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_9font_mdp"
                android:layout_marginStart="@dimen/_25mdp"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:text="Delete" />

        </LinearLayout>

        <TextView
            android:id="@+id/delete_notice_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/_2mdp"
            android:text="This Notice is officially published by Admin."
            android:layout_marginStart="@dimen/_10font_mdp"
            android:layout_marginEnd="@dimen/_10font_mdp"
            android:textSize="@dimen/_17font_mdp"
            android:textColor="#45B8B8"/>

        <ImageView
            android:id="@+id/delete_notice_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerInside" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>